<Layout title="Cypherpunk Café" description="The Exit & Build Sanctuary">
  
  <style>
    /* IMPORT THE DOS FONT */
    @import url('https://fonts.cdnfonts.com/css/perfect-dos-vga-437');

    :root {
      --bg-color: #000000;
      --term-green: #33FF00;
      --term-dim: #008F11;
      --font-stack: 'Perfect DOS VGA 437', monospace;
    }

    body {
      background-color: var(--bg-color);
      color: var(--term-green);
      font-family: var(--font-stack);
      margin: 0;
      padding: 20px;
      overflow-x: hidden;
      font-size: 16px;
    }

    /* THE NFO BORDER CONTAINER */
    .nfo-box {
      max-width: 900px;
      margin: 0 auto;
      border: 4px double var(--term-green);
      padding: 10px;
      box-shadow: 0 0 10px var(--term-dim);
      background-color: #050505;
      min-height: 90vh;
      display: flex;
      flex-direction: column;
    }

    /* ASCII HEADER (RESPONSIVE FIX) */
    .ascii-art {
      font-family: var(--font-stack);
      white-space: pre;       /* Forces the art to keep its shape */
      color: var(--term-green);
      text-align: center;
      line-height: 1;         /* Tightens vertical gaps */
      margin-bottom: 20px;
      font-weight: bold;

      /* THE RESPONSIVE MAGIC: Locks font size to screen width */
      font-size: min(14px, 2.2vw); 
      
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;
    }

    /* IRC WINDOW STYLING */
    .irc-window {
      flex-grow: 1;
      border-top: 2px solid var(--term-green);
      padding-top: 10px;
      display: flex;
      flex-direction: column;
    }

    .irc-header {
      background: var(--term-green);
      color: #000;
      padding: 2px 5px;
      margin-bottom: 10px;
      font-weight: bold;
      text-transform: uppercase;
    }

    /* THE CHAT LOG */
    #chat-log {
      list-style: none;
      padding: 0;
      margin: 0;
    }

    .msg-line {
      margin-bottom: 8px;
      line-height: 1.5;
      display: block;
    }

    .timestamp {
      color: var(--term-dim);
      margin-right: 8px;
    }

    .username {
      color: #FFF;
      margin-right: 5px;
    }

    /* LINKS / BUTTONS */
    .file-transfer {
      margin-top: 20px;
      border: 1px dashed var(--term-green);
      padding: 10px;
      display: block;
      opacity: 0;
      transition: opacity 1s ease-in;
    }

    .file-row {
      display: flex;
      justify-content: space-between;
      align-items: center;
      margin-bottom: 10px;
      border-bottom: 1px dotted var(--term-dim);
      padding-bottom: 5px;
    }

    .file-row:last-child {
      border-bottom: none;
    }

    a.download-link {
      color: #000;
      background: var(--term-green);
      text-decoration: none;
      padding: 2px 8px;
      font-weight: bold;
      cursor: pointer;
    }
    
    a.download-link:hover {
      background: #FFF;
      color: #000;
    }

    /* BLINKING CURSOR */
    .cursor::after {
      content: "█";
      animation: blink 1s step-end infinite;
    }

    @keyframes blink {
      50% { opacity: 0; }
    }

    /* MOBILE TWEAKS */
    @media (max-width: 600px) {
      .nfo-box { border: 2px double var(--term-green); padding: 5px; }
      .file-row { flex-direction: column; align-items: flex-start; gap: 5px; }
      a.download-link { width: 100%; text-align: center; }
    }
  </style>

