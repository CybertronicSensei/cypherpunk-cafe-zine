  <style>
    /* --- THE KERNEL: CORE VARIABLES --- */
    @import url('https://fonts.cdnfonts.com/css/perfect-dos-vga-437');

    :root {
      --bg-color: #000000;
      --term-green: #33FF00;
      --term-dim: #008F11;
      --font-stack: 'Perfect DOS VGA 437', monospace;
      --crt-scanline: rgba(18, 16, 16, 0.1);
    }

    /* --- GLOBAL RESET --- */
    * { box-sizing: border-box; }

    body {
      background-color: var(--bg-color);
      color: var(--term-green);
      font-family: var(--font-stack);
      margin: 0;
      padding: 0;
      height: 100vh;
      width: 100vw;
      overflow: hidden;
      display: flex;
      align-items: center;
      justify-content: center;
    }

    /* --- THE TERMINAL CONTAINER --- */
    .nfo-box {
      width: 100%;
      max-width: 900px;
      height: 90vh;
      border: 4px double var(--term-green);
      background-color: #050505;
      box-shadow: 0 0 15px var(--term-dim);
      display: flex;
      flex-direction: column;
      position: relative;
      animation: flicker 0.15s infinite;
    }

    /* --- RESPONSIVE LOGIC --- */
    .ascii-desktop { display: block; }
    .ascii-mobile { display: none; }
    
    .irc-window {
      padding: 10px;
      overflow-y: auto;
      scrollbar-width: thin;
      scrollbar-color: var(--term-green) #000;
      flex-grow: 1;
    }

    /* MOBILE MODE (< 800px) */
    @media (max-width: 800px) {
      .nfo-box {
        max-width: 100%;
        height: 100vh;
        border: none;
        border-top: 2px solid var(--term-green);
        border-bottom: 2px solid var(--term-green);
      }
      .ascii-desktop { display: none; }
      .ascii-mobile { display: block; }
      body { font-size: 14px; }
    }

    /* --- ASCII ART ENGINE --- */
    .ascii-art {
      font-family: var(--font-stack);
      white-space: pre;
      color: var(--term-green);
      text-align: center;
      line-height: 1;
      margin: 15px 0;
      font-weight: bold;
      flex-shrink: 0;
      
      /* Dynamic Scaling */
      font-size: clamp(8px, 2vw, 14px); 
    }

    /* --- IRC CHAT ENGINE --- */
    .irc-header {
      background: var(--term-green);
      color: #000;
      padding: 4px 8px;
      font-weight: bold;
      text-transform: uppercase;
      font-size: 0.9em;
      flex-shrink: 0;
    }

    #chat-log {
      list-style: none;
      padding: 0;
      margin: 0;
      margin-bottom: 20px;
    }

    .msg-line {
      margin-bottom: 10px;
      line-height: 1.4;
      display: block;
      word-wrap: break-word;
    }

    .timestamp { color: var(--term-dim); margin-right: 8px; }
    .username { color: #FFF; margin-right: 5px; }

    /* --- LINKS --- */
    .file-transfer {
      margin-top: 20px;
      border: 1px dashed var(--term-green);
      padding: 10px;
      display: none;
      opacity: 0;
      transition: opacity 1s ease-in;
    }

    .file-row {
      display: flex;
      justify-content: space-between;
      align-items: center;
      padding: 8px 0;
      border-bottom: 1px dotted var(--term-dim);
    }
    
    @media (max-width: 600px) {
      .file-row { flex-direction: column; align-items: flex-start; gap: 8px; }
      a.download-link { width: 100%; text-align: center; display: block;}
    }

    a.download-link {
      color: #000;
      background: var(--term-green);
      text-decoration: none;
      padding: 4px 12px;
      font-weight: bold;
      text-transform: uppercase;
    }
    a.download-link:hover { background: #FFF; }

    /* --- FOOTER --- */
    .sys-status {
      margin-top: auto;
      border-top: 1px solid var(--term-dim);
      padding: 5px;
      font-size: 0.8rem;
      color: var(--term-dim);
      display: flex;
      justify-content: space-between;
    }

    /* --- ANIMATIONS --- */
    .cursor::after { content: "█"; animation: blink 1s step-end infinite; }
    @keyframes blink { 50% { opacity: 0; } }
    @keyframes flicker { 
      0% { opacity: 0.97; } 50% { opacity: 1; } 100% { opacity: 0.98; } 
    }
  </style>

