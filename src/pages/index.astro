  <script is:inline>
    // TYPEWRITER ENGINE
    const scriptLines = [
      "Boot sequence initiated...",
      "Resolving host... cypherpunk.fyi found.",
      "...",
      "Identity: [Redacted]. Handle: 'Wizard'.",
      "Mission: Breaking the digital siege.",
      "Status: The systems are rigged. The 'free' tools are traps.",
      "...",
      "The real hack isn't code. It's SOVEREIGNTY.",
      "We are launching the Exit & Build protocols.",
      "This is not a course. This is a sanctuary.",
      "Choose your path.",
      "EOF."
    ];

    const typingSpeed = 25; 
    const lineDelay = 250;
    let lineIndex = 0;
    let charIndex = 0;
    const typingArea = document.getElementById('typing-area');
    const chatLog = document.getElementById('chat-log');
    const linkContainer = document.getElementById('link-container');

    function typeWriter() {
      if (lineIndex < scriptLines.length) {
        const currentLine = scriptLines[lineIndex];
        if (charIndex < currentLine.length) {
          typingArea.textContent += currentLine.charAt(charIndex);
          charIndex++;
          setTimeout(typeWriter, typingSpeed);
        } else {
          commitLine();
          lineIndex++;
          charIndex = 0;
          setTimeout(typeWriter, lineDelay);
        }
      } else {
        typingArea.classList.remove('cursor');
        linkContainer.style.display = 'block';
        setTimeout(() => { 
          linkContainer.style.opacity = '1'; 
          linkContainer.scrollIntoView({ behavior: "smooth" });
        }, 50);
      }
    }

    function commitLine() {
      const li = document.createElement('li');
      li.className = 'msg-line';
      const time = new Date().toLocaleTimeString('en-US', { hour12: false, hour: "numeric", minute: "numeric" });
      li.innerHTML = `<span class="timestamp">[${time}]</span><span class="username">&lt;anonymous&gt;</span><span class="message">${typingArea.textContent}</span>`;
      chatLog.appendChild(li);
      typingArea.textContent = '';
      const win = document.querySelector('.irc-window');
      win.scrollTop = win.scrollHeight;
    }

    function updateSystemStatus() {
      const width = window.innerWidth;
      const height = window.innerHeight;
      const resText = `RES: ${width}x${height}`;
      document.getElementById('sys-res').textContent = resText;
    }

    window.onload = function() {
      updateSystemStatus();
      setTimeout(typeWriter, 800);
    };
    
    window.onresize = updateSystemStatus;
  </script>
