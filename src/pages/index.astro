  <script is:inline>
    const scriptLines = [
      "Initializing secure connection...",
      "Connection established to #cypherpunk-cafe.",
      "...",
      "My name is [Redacted]. Some know me as 'Wizard'.",
      "I've spent a lifetime inside the source code of the world.",
      "I've seen the traps. The $2,000 courses. The 'free' tools.",
      "They are systems designed to lock you in.",
      "...",
      "The real hack isn't code. It's SOVEREIGNTY.",
      "We are launching the Exit & Build protocols.",
      "This is not a course. This is a sanctuary.",
      "Choose your path below.",
      "EOF."
    ];

    const typingSpeed = 30; 
    const lineDelay = 350;
    
    let lineIndex = 0;
    let charIndex = 0;
    const typingArea = document.getElementById('typing-area');
    const chatLog = document.getElementById('chat-log');
    const linkContainer = document.getElementById('link-container');

    function typeWriter() {
      if (lineIndex < scriptLines.length) {
        const currentLine = scriptLines[lineIndex];
        if (charIndex < currentLine.length) {
          typingArea.textContent += currentLine.charAt(charIndex);
          charIndex++;
          setTimeout(typeWriter, typingSpeed);
        } else {
          commitLine();
          lineIndex++;
          charIndex = 0;
          setTimeout(typeWriter, lineDelay);
        }
      } else {
        typingArea.classList.remove('cursor');
        linkContainer.style.display = 'block';
        setTimeout(() => { linkContainer.style.opacity = '1'; }, 50);
      }
    }

    function commitLine() {
      const li = document.createElement('li');
      li.className = 'msg-line';
      const time = new Date().toLocaleTimeString('en-US', { hour12: false, hour: "numeric", minute: "numeric" });
      li.innerHTML = `<span class="timestamp">[${time}]</span><span class="username">&lt;anonymous&gt;</span><span class="message">${typingArea.textContent}</span>`;
      chatLog.appendChild(li);
      typingArea.textContent = '';
      window.scrollTo(0, document.body.scrollHeight);
    }

    window.onload = function() { setTimeout(typeWriter, 1000); };
  </script>
</Layout>
